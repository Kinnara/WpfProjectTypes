<Page
    x:Class="MenuBarProject.Views.Blank2Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Style="{DynamicResource MetroPage}"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"      
    Title="Blank2Page">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Text="Blank 2"
            Margin="{StaticResource MediumLeftMargin}"
            Style="{StaticResource PageTitleStyle}" />
        <StackPanel
            Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
                <TextBlock Text="Text sent from Main Window:" Margin="12,0,0,0" />
                <TextBlock Text="{Binding OtherWindowsData}" Margin="12,0,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
                <TextBlock Text="Data to send to Main Window:" Margin="12,0,0,0" />
                <TextBox Text="{Binding DataToSend, Mode=TwoWay}" Margin="12,0,0,0" Width="200" />
                <Button Content="Send" Command="{Binding SendCommand}" Margin="12,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>